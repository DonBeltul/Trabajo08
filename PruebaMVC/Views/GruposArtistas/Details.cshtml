@model PruebaMVC.Models.GruposArtista

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Artista del Grupo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artistas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artistas!.Nombre)
        </dd>
 <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grupos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupos!.Nombre)
        </dd>

    </dl>
</div>
<div class="fondoiconos">
    <a asp-action="Edit" asp-route-id="@Model?.Id"><i class="fa-solid fa-pen"></i></a>
    <a asp-action="Index"><i class="fa-solid fa-rotate-left"></i></a>
</div>
